@model VisingPackSolution.ViewModels.System.Users.RoleAssignRequest

@{
    ViewData["Title"] = "Role Assign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="/checkbox-toggle/css/netliva_switch.css" />



<div class="container-fluid">
    <h1 class="mt-4">Role Assign</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active">Role Assign</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="User">Back to list</a>
        </div>

        <div class="card-body">
            <form asp-action="RoleAssign">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                    @for (var i = 0; i < Model.Roles.Count; i++)
                    {
                        <div class="row">
                                <div class="col-2 mb-3">
                                    @Model.Roles[i].Name
                                </div>                                
                                <div class="netliva-switch col-3">
                                    <input type="checkbox" asp-for="Roles[i].Selected" onclick="Select('@Model.Roles[i].Name')" netliva-switch="OK" data-size="mini" id="netliva-switch-@Model.Roles[i].Name" data-active-color="#0A0">
                                    <label for="netliva-switch-@Model.Roles[i].Name" style="width: 3.15em; --switch-active-color: #0A0"></label>
                                    <input type="hidden" asp-for="Roles[i].Id" />
                                    <input type="hidden" asp-for="Roles[i].Name" />
                                </div>
                                
                        </div>}
                
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
    function Select(type) {
        switch (type) {
            case 'Admin':
                if (document.getElementById('netliva-switch-Admin').checked) {
                    document.getElementById('netliva-switch-Manager').checked = false;
                    document.getElementById('netliva-switch-User').checked = false;
                    document.getElementById('netliva-switch-Planner').checked = false;
                } 
            case 'Manager':
                if (document.getElementById('netliva-switch-Manager').checked) {
                    document.getElementById('netliva-switch-Admin').checked = false;
                    document.getElementById('netliva-switch-User').checked = false;
                    document.getElementById('netliva-switch-Planner').checked = false;
                } 
            case 'Planner':
                if (document.getElementById('netliva-switch-Planner').checked) {
                    document.getElementById('netliva-switch-Admin').checked = false;
                    document.getElementById('netliva-switch-User').checked = false;
                    document.getElementById('netliva-switch-Manager').checked = false;
                } 
            case 'User':
                if (document.getElementById('netliva-switch-User').checked) {
                    document.getElementById('netliva-switch-Admin').checked = false;
                    document.getElementById('netliva-switch-Planner').checked = false;
                    document.getElementById('netliva-switch-Manager').checked = false;
                } 
        }
    }
</script>


